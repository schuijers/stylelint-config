{
  "name": "@schuijers/stylelint-config",
  "version": "0.1.0",
  "description": "Stylelint rules according to schuijers' personal preferences.",
  "license": "MIT",
  "author": "Martijn Schuijers",
  "homepage": "https://github.com/schuijers/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/schuijers/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/schuijers/stylelint-config/issues"
  },
  "main": "index.js",
  "scripts": {
    "changeset": "changeset",
    "check": "stylelint-config-prettier-check",
    "format": "prettier --check \"**/*.{js,json}\"",
    "lint": "npm-run-all lint:*",
    "lint:code": "eslint --ignore-path .gitignore .",
    "lint:styles": "stylelint --ignore-path .gitignore \"**/*.{css,scss,vue}\"",
    "release": "changeset publish",
    "test": "npm-run-all check"
  },
  "dependencies": {
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0",
    "stylelint": "^14.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@schuijers/eslint-config": "^1.1.0",
    "@schuijers/prettier-config": "^1.4.0",
    "eslint": "^8.28.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "stylelint": "^14.15.0",
    "typescript": "^4.9.3"
  },
  "keywords": [
    "config",
    "schuijers",
    "stylelint",
    "stylelintconfig",
    "stylelintrc",
    "styleguide"
  ]
}
