{
  "name": "@schuijers/stylelint-config",
  "version": "0.5.0",
  "description": "Stylelint rules according to schuijers' personal preferences.",
  "license": "MIT",
  "author": "Martijn Schuijers",
  "homepage": "https://github.com/schuijers/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/schuijers/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/schuijers/stylelint-config/issues"
  },
  "main": "index.js",
  "files": [
    "order.js",
    "scss.js",
    "vue.js"
  ],
  "scripts": {
    "changeset": "changeset",
    "format": "prettier --check \"**/*.{js,json}\"",
    "lint": "npm-run-all lint:*",
    "lint:code": "eslint --ignore-path .gitignore .",
    "lint:styles": "stylelint --ignore-path .gitignore \"**/*.{css,scss,vue}\"",
    "release": "changeset publish"
  },
  "dependencies": {
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.6.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0",
    "stylelint": "^15.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.5.1",
    "@schuijers/commitlint-config": "^0.3.0",
    "@schuijers/eslint-config": "^1.4.0",
    "@schuijers/prettier-config": "^1.5.0",
    "eslint": "^8.37.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "stylelint": "^15.4.0",
    "typescript": "^5.0.3"
  },
  "keywords": [
    "config",
    "schuijers",
    "styleguide",
    "stylelint",
    "stylelintconfig",
    "stylelintrc"
  ]
}
